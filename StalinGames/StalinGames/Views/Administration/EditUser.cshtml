@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";

}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Blyats" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Blyats" class="form-control">
            <span asp-validation-for="Blyats" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @if (User.IsInRole("SuperAdmin"))
            {
                <select asp-for="Role" asp-items="Model.Roles" class="custom-select mr-sm-2">
                    <option value="">Please Select</option>
                </select>
            }
            else
            {
                <select asp-for="Role" asp-items="Model.Roles" disabled class="custom-select mr-sm-2">
                    <option value="">Please Select</option>
                </select>
            }

            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-warning">Update</button>
            <a asp-action="ListUsers" asp-controller="Administration" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

