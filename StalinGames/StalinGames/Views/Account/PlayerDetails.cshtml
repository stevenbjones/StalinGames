@model ApplicationUser
@inject UserManager<ApplicationUser> userManager;
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewBag.Title = "Player " + Model.UserName;
    var profilePicturePath = $"/images/{Model.ProfilePicturePath ?? "DefaultProfilePicture.jpg"}";
    DateTime dateTimeOffset = DateTimeOffset.FromUnixTimeSeconds(Model.LastGamePlayed).Date;
  

}

<div class="container">

    <hr>
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-sm-12" style="display:inline;"><h1 style="display:inline;">@Model.UserName</h1> <h1 style="margin-left: 15em;display:inline; ">Blyats:</h1> <input disabled style="width: 6em; display:inline;" asp-for="Blyats" class="form-control"></div>

        </div>
        <div class="row">
            <div class="col-sm-10"><h3>@Model.ProfileTitle</h3></div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <!--left col-->

                <div class="text-center">
                    <img src="@profilePicturePath" class="avatar img-circle img-thumbnail" alt="avatar">
                </div><br>
            </div><!--/col-3-->
            <div class="col-sm-9">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <hr>
                        <form class="form" action="##" method="post" id="registrationForm">

                            <table >
                                <tbody>



                                    <tr class="form-group">


                                        <td><label class="col-xs-6"><h4>Last login:</h4></label></td>
                                        <td><input disabled style="width: 7em; display:inline;" placeholder="@dateTimeOffset.ToString("dd/MM/yyyy")" class="form-control"></td>
                                    </tr>
                                    <tr class="form-group">


                                        <td><label class="col-xs-6"><h4>Total games played:</h4></label></td>
                                        <td><input disabled style="width: 7em; display:inline;" asp-for="TotalGamesPlayed" class="form-control"></td>
                                    </tr>
                                    <tr class="form-group">


                                        <td><label class="col-xs-6"><h4>Total blyats lost:</h4></label></td>
                                        <td><input disabled style="width: 7em; display:inline;" asp-for="TotalBlyatsLost" class="form-control"></td>
                                    </tr>
                                    <tr class="form-group">


                                        <td><label class="col-xs-6"><h4>Account created date:</h4></label></td>
                                        <td><input disabled style="width: 7em; display:inline;" asp-for="AccountCreatedDate" class="form-control"></td>
                                    </tr>



                                </tbody>
                            </table>
                        </form>

                        <hr>
                        @if (signInManager.IsSignedIn(User))
                        {
                            ApplicationUser _user = await userManager.FindByNameAsync(User.Identity.Name); //neemt de ingelogde user en zet die in _user zodat ik meer dan alleen de naam kan gebruiken
                            if (_user.Id == Model.Id)
                            {
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <br>
                                        <a asp-controller="Account" asp-action="PlayerEdit" asp-route-id="@Model.Id" class="btn btn-lg btn-success">Edit</a>
                                    </div>
                                </div>
                            }
                        }

                    </div><!--/tab-pane-->
            </div><!--/tab-content-->
        </div><!--/col-9-->
    </div><!--/row-->
</div>